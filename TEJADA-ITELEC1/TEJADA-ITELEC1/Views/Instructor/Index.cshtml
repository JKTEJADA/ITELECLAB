
@model IEnumerable<Instructor>;


<a class=" btn btn-primary" asp-area="" asp-controller="Instructor" asp-action="addInstructor">Add</a>




<table class="table table-dark">

    <tr>
        <th colspan="6">Instructor</th>
    </tr>

    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Is Tenured</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Show Details</td>
        <td>Edit Details</td>
        <td>Delete</td>
       


    </tr>
    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.Id</td>
            <td>@instructor.FirstName @instructor.LastName</td>
            <td>@(instructor.isTenured ? "Permanent" : "Probation")</td>
            <td>@instructor.Rank</td>
            <td>@instructor.HiringDate</td>
          
            <td><a asp-action="ShowDetail" asp-route-id="@instructor.Id">Show Details</a></td>
            <td><a asp-action="editDetail" asp-route-id="@instructor.Id">Edit Details</a></td>
            <td><a asp-action="Delete" asp-route-id="@instructor.Id">Delete</a></td>

        </tr>
    }
</table>
